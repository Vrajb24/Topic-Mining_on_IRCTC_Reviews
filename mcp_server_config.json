{
  "name": "irctc-review-analysis-mcp",
  "version": "1.0.0",
  "description": "MCP server for IRCTC Review Analysis System",
  "author": "IRCTC Analysis Team",
  "capabilities": {
    "tools": true,
    "prompts": true,
    "resources": true
  },
  "tools": [
    {
      "name": "scrape_reviews",
      "description": "Scrape IRCTC reviews from Google Play Store",
      "parameters": {
        "limit": {
          "type": "integer",
          "description": "Number of reviews to scrape",
          "default": 1000
        },
        "start_date": {
          "type": "string",
          "description": "Start date for review collection (YYYY-MM-DD)",
          "optional": true
        }
      }
    },
    {
      "name": "analyze_review",
      "description": "Analyze a single review for sentiment and topics",
      "parameters": {
        "review_text": {
          "type": "string",
          "description": "The review text to analyze"
        },
        "language": {
          "type": "string",
          "description": "Language code (en, hi, auto)",
          "default": "auto"
        }
      }
    },
    {
      "name": "batch_analyze",
      "description": "Analyze multiple reviews in batch",
      "parameters": {
        "reviews": {
          "type": "array",
          "description": "Array of review texts"
        },
        "return_topics": {
          "type": "boolean",
          "description": "Whether to return topic assignments",
          "default": true
        }
      }
    },
    {
      "name": "train_models",
      "description": "Train or retrain the topic and sentiment models",
      "parameters": {
        "model_type": {
          "type": "string",
          "enum": ["topic", "sentiment", "all"],
          "description": "Which models to train",
          "default": "all"
        },
        "use_latest_data": {
          "type": "boolean",
          "description": "Use the most recent scraped data",
          "default": true
        }
      }
    },
    {
      "name": "generate_report",
      "description": "Generate analysis report for a time period",
      "parameters": {
        "period": {
          "type": "string",
          "enum": ["daily", "weekly", "monthly", "custom"],
          "description": "Report period"
        },
        "start_date": {
          "type": "string",
          "description": "Start date for custom period",
          "optional": true
        },
        "end_date": {
          "type": "string",
          "description": "End date for custom period",
          "optional": true
        }
      }
    },
    {
      "name": "get_trending_topics",
      "description": "Get currently trending topics",
      "parameters": {
        "top_k": {
          "type": "integer",
          "description": "Number of top topics to return",
          "default": 10
        },
        "time_window": {
          "type": "string",
          "description": "Time window for trends (24h, 7d, 30d)",
          "default": "7d"
        }
      }
    },
    {
      "name": "detect_anomalies",
      "description": "Detect anomalies or spikes in review patterns",
      "parameters": {
        "metric": {
          "type": "string",
          "enum": ["sentiment", "volume", "topics"],
          "description": "What to monitor for anomalies"
        },
        "sensitivity": {
          "type": "float",
          "description": "Anomaly detection sensitivity (0.1-1.0)",
          "default": 0.7
        }
      }
    },
    {
      "name": "compare_embeddings",
      "description": "Compare different embedding models performance",
      "parameters": {
        "models": {
          "type": "array",
          "description": "List of model names to compare",
          "optional": true
        },
        "test_size": {
          "type": "integer",
          "description": "Number of reviews to test on",
          "default": 1000
        }
      }
    },
    {
      "name": "export_data",
      "description": "Export analysis results to various formats",
      "parameters": {
        "format": {
          "type": "string",
          "enum": ["csv", "json", "excel", "pdf"],
          "description": "Export format"
        },
        "include_raw": {
          "type": "boolean",
          "description": "Include raw review data",
          "default": false
        }
      }
    },
    {
      "name": "database_status",
      "description": "Check database connection and statistics",
      "parameters": {}
    }
  ],
  "prompts": [
    {
      "name": "analyze_trends",
      "description": "Analyze review trends and provide insights",
      "template": "Based on the reviews from {period}, analyze the main trends in user feedback. Focus on: 1) Most common complaints, 2) Improvements noticed, 3) Emerging issues"
    },
    {
      "name": "root_cause_analysis",
      "description": "Perform root cause analysis on negative reviews",
      "template": "Analyze the negative reviews and identify root causes for user dissatisfaction. Group related issues and suggest actionable solutions."
    },
    {
      "name": "sentiment_summary",
      "description": "Summarize sentiment patterns",
      "template": "Provide a comprehensive sentiment analysis summary including: overall sentiment distribution, sentiment by topic, and temporal sentiment changes."
    }
  ],
  "resources": [
    {
      "type": "data",
      "name": "review_database",
      "path": "./data/reviews.db",
      "description": "SQLite database containing all reviews"
    },
    {
      "type": "model",
      "name": "topic_model",
      "path": "./data/models/bertopic_model.pkl",
      "description": "Trained BERTopic model"
    },
    {
      "type": "model",
      "name": "sentiment_model",
      "path": "./data/models/sentiment_model.pkl",
      "description": "Fine-tuned sentiment analysis model"
    },
    {
      "type": "config",
      "name": "scraping_config",
      "path": "./config/scraping.json",
      "description": "Web scraping configuration"
    },
    {
      "type": "cache",
      "name": "embedding_cache",
      "path": "./cache/embeddings/",
      "description": "Cached embeddings for faster processing"
    }
  ],
  "configuration": {
    "max_concurrent_requests": 5,
    "timeout": 300,
    "memory_limit": "4GB",
    "log_level": "INFO",
    "cache_enabled": true,
    "auto_retrain_interval": "weekly"
  }
}