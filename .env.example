# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/reviews.db

# Chrome Configuration for WSL
CHROME_PATH=/mnt/c/Program Files/Google/Chrome/Application/chrome.exe
CHROME_DRIVER_PATH=auto  # Will auto-download

# API Configuration (Using Free Services)
USE_GOOGLE_TRANSLATE=false
TRANSLATION_SERVICE=googletrans  # Free python library
HUGGINGFACE_TOKEN=optional  # Not required for public models

# Scraping Configuration
SCRAPE_DELAY=3  # Seconds between requests
SCRAPE_BATCH_SIZE=100
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
MODEL_CACHE_DIR=./data/models
DEVICE=cpu  # Change to cuda if GPU available

# Dashboard Configuration
DASHBOARD_PORT=8501
DASHBOARD_HOST=localhost
DEBUG_MODE=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_ENABLED=true